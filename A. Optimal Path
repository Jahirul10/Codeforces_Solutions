    #include<bits/stdc++.h>
    #define ll long long int
    using namespace std;
    int main()
    {
        ll t;
        cin>>t;
        while(t--)
        {
            ll m,n,sum=0;
            cin>>n>>m;
            for(int i=2; i<n+1; i++)sum+=m*i;
            sum+=((m+1)*m)/2;
            cout<<sum<<endl;
        }
        return 0;
    }
